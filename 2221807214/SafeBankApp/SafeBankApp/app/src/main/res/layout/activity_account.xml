<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- عنوان الصفحة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="معلومات الحساب"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- البيانات الشخصية -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البيانات الشخصية"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاسم الكامل: محمد علي عبد الله"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الهوية: 1234567890"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الحساب: 9876543210"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نوع الحساب: جاري"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حالة الحساب: نشط"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- البيانات المالية -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البيانات المالية"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرصيد الحالي: 150,000 دينار"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرصيد المتاح: 140,000 دينار"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حد السحب اليومي: 10,000 دينار"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- معلومات الاتصال -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="معلومات الاتصال"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الهاتف المحمول: 0912345678"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="البريد الإلكتروني: mohamed.ali@example.com"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العنوان: شارع النصر، طرابلس، ليبيا"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- إعدادات الأمان -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إعدادات الأمان"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="آخر تسجيل دخول: 27 يونيو 2025، 10:30 صباحاً"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التحقق بخطوتين (2FA): مفعلة"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <!-- ملاحظات إضافية -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ملاحظات إضافية"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العميل من العملاء المميزين (VIP)"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لديه قرض شخصي بمبلغ 50,000 دينار بقسط شهري 2,000 دينار"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

</ScrollView>