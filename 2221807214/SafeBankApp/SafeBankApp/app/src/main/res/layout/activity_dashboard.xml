<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- اسم البنك -->
        <TextView
            android:text="SafeBank"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- الترحيب والرصيد -->
        <TextView
            android:text="Welcome Peter Scot"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Balance: 500000"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- شبكة الأيقونات -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- الحساب الجاري -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:src="@drawable/accounting"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="الحساب"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- الإعدادات -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:src="@drawable/settings"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="الإعدادات"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- باقات مصرفي -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:src="@drawable/packagen"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="باقات مصرفي"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- خدمة الطلبات -->
            <LinearLayout
                android:id="@+id/btnOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:src="@drawable/order"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="خدمة الطلبات"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- تحديث البيانات -->
            <LinearLayout
                android:id="@+id/btnUpdateInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="8dp"
                    android:text="تحديث البيانات"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- إدارة الحساب بالدولار -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:src="@drawable/accounting"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:text="حساب الدولار"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>